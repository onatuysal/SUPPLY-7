<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/u_turn_to_l"
            app:tint="@color/primary_pink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Select A Delivery Point"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Select From Possible Delivery Points"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"/>

    <!-- Radio Group for Locations -->
    <RadioGroup
        android:id="@+id/radioGroupLocations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radioMeydan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meydan"
            android:padding="12dp"
            android:background="@drawable/bg_option_border"
            android:layout_marginBottom="8dp"
            android:buttonTint="@color/primary_pink"
            android:textColor="@color/text_dark"/>

        <RadioButton
            android:id="@+id/radioRektorluk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rektörlük"
            android:padding="12dp"
            android:background="@drawable/bg_option_border"
            android:layout_marginBottom="8dp"
            android:buttonTint="@color/primary_pink"
            android:textColor="@color/text_dark"/>

        <RadioButton
            android:id="@+id/radioSosyal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sosyal Tesisler"
            android:padding="12dp"
            android:background="@drawable/bg_option_border"
            android:layout_marginBottom="8dp"
            android:buttonTint="@color/primary_pink"
            android:textColor="@color/text_dark"/>

        <RadioButton
            android:id="@+id/radioGuzelSanatlar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Güzel Sanatlar Fakültesi"
            android:padding="12dp"
            android:background="@drawable/bg_option_border"
            android:layout_marginBottom="8dp"
            android:buttonTint="@color/primary_pink"
            android:textColor="@color/text_dark"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="or select from the map"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"/>

    <!-- Map Image -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">
        
        <ImageView
            android:id="@+id/imgMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_campus_map"
            android:scaleType="centerCrop"/>
            
        <!-- Could add clickable overlay spots here if needed, but for now just visual -->
    </androidx.cardview.widget.CardView>

    <!-- Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/btn_cancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/text_dark"
            app:cornerRadius="28dp"
            app:strokeColor="@color/text_dark"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Confirm"
            android:backgroundTint="#CE93D8"
            android:textColor="@color/white"
            app:cornerRadius="28dp"/>
    </LinearLayout>

</LinearLayout>
