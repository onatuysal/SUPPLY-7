<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_input_field"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iconCardType"
        android:layout_width="40dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_credit_card" 
        app:tint="@color/text_dark"/> 
        
    <!-- Note: In real app, remove tint for brand icon, but using placeholder now -->

    <TextView
        android:id="@+id/textCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="**** **** **** 1234"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconCardType"
        app:layout_constraintTop_toTopOf="parent" />
        
    <TextView
        android:id="@+id/textExpiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/28"
        android:textColor="@color/text_light"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgSelected"
        app:layout_constraintTop_toTopOf="parent" />
        
    <ImageView
        android:id="@+id/imgSelected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_circle_active"
        android:visibility="gone"
        app:tint="@color/primary_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
