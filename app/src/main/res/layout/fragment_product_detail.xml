<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/primary_pink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/textHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_product_details"
            android:textSize="@dimen/text_subheading"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView: Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Product Image Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="0dp"
                app:strokeWidth="@dimen/stroke_width"
                app:strokeColor="@color/stroke_gray"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:id="@+id/imageProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"
                    tools:ignore="ContentDescription" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Title & Price Block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resim Çantası"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_heading"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺250"
                    android:textColor="@color/primary_pink"
                    android:textSize="@dimen/text_heading"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Seller Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#EEE"
                app:cardBackgroundColor="#FAFAFA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgSellerAvatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/generic_ava"
                        android:background="@drawable/bg_circle_gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_seller"
                            android:textSize="10sp"
                            android:textColor="@color/text_light"
                            android:textAllCaps="true" />

                        <TextView
                            android:id="@+id/textSellerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seller Name"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_profile"
                        android:textColor="@color/primary_pink"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:padding="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/label_description"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_subheading"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:lineSpacingMultiplier="1.2"
                android:text="Desc..."
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_body" />

            <!-- Details Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:columnCount="2"
                android:rowCount="3"
                android:useDefaultMargins="true">

                <!-- Category -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_category"
                        android:textColor="@color/text_light"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stationery"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Faculty -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_faculty"
                        android:textColor="@color/text_light"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textFaculty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Art"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Condition -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_condition"
                        android:textColor="@color/text_light"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Underused"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Brand -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_brand"
                        android:textColor="@color/text_light"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faber Castell"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Department -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_department"
                        android:textColor="@color/text_light"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textDepartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fine Arts"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Color -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_color"
                        android:textColor="@color/text_light"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textProductColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Row 1: Message + Make Offer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMessageSeller"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_secondary"
                android:text="@string/btn_message"
                android:textAllCaps="false"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:stateListAnimator="@null" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMakeOffer"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_button_secondary"
                android:text="@string/btn_make_offer"
                android:textAllCaps="false"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:stateListAnimator="@null" />
        </LinearLayout>

        <!-- Row 2: Buy Now -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_button_primary"
            android:text="@string/btn_buy_now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:stateListAnimator="@null" />

        <!-- Secondary Actions Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnExchangeOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_rate_seller"
                android:textColor="@color/primary_pink"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Delete Button (Hidden by default) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDeleteProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_primary"
            android:backgroundTint="@color/error_red"
            android:text="@string/btn_delete_product"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



