<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/nav_messages"
        android:textColor="@color/text_dark"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_trash"
        app:layout_constraintBottom_toBottomOf="@+id/textTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textTitle" />

    <View
        android:id="@+id/dividerHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchChat"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_search_box"
        android:drawableStart="@drawable/ic_search_pink"
        android:drawablePadding="12dp"
        android:hint="@string/hint_search_chat"
        android:paddingHorizontal="12dp"
        android:textColor="@color/text_dark"
        android:textColorHint="#9E9E9E"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/dividerHeader" />

    <!-- Tabs (Horizontal Scroll) -->
    <HorizontalScrollView
        android:id="@+id/scrollTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/searchChat">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tab_selected"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="@string/filter_all"
                android:textColor="@color/text_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tabPurchases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tab_unselected"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/filter_purchases"
                android:textColor="@color/text_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tabSales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tab_unselected"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/filter_sales"
                android:textColor="@color/text_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tabTrades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tab_unselected"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/filter_trades"
                android:textColor="@color/text_dark"
                android:textSize="14sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Messages List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollTabs"
        tools:listitem="@layout/item_chat_row" />

</androidx.constraintlayout.widget.ConstraintLayout>
