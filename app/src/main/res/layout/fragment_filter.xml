<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <!-- Geri ok butonu -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_24"
        app:tint="@color/primary_pink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFiltersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filters"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <TextView
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Reset"
        android:textColor="@color/primary_pink"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnApplyFilters"
        app:layout_constraintTop_toBottomOf="@+id/btnBack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



                android:background="#EEE" />

            <!-- Department/Faculty -->
            <TextView
                android:id="@+id/textDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department: All"
                android:textColor="@color/text_dark"
                android:background="?attr/selectableItemBackground"
                android:paddingVertical="12dp"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawableTint="@color/text_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEE" />

            <!-- Brand -->
            <TextView
                android:id="@+id/textBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brand: All"
                android:textColor="@color/text_dark"
                android:background="?attr/selectableItemBackground"
                android:paddingVertical="12dp"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawableTint="@color/text_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEE" />

            <!-- City -->
            <TextView
                android:id="@+id/textCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City: All"
                android:textColor="@color/text_dark"
                android:background="?attr/selectableItemBackground"
                android:paddingVertical="12dp"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawableTint="@color/text_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEE" />

            <!-- Item Condition -->
            <TextView
                android:id="@+id/textItemCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Condition"
                android:textColor="@color/text_dark"
                android:paddingTop="12dp"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroupCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:buttonTint="@color/primary_pink" />

                <RadioButton
                    android:id="@+id/radioLikeNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Like-New"
                    android:buttonTint="@color/primary_pink" />

                <RadioButton
                    android:id="@+id/radioUsed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Used-Good"
                    android:buttonTint="@color/primary_pink" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEE"
                android:layout_marginTop="8dp" />

            <!-- Price Range -->
            <TextView
                android:id="@+id/textPriceRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price Range"
                android:textColor="@color/text_dark"
                android:paddingTop="12dp" />

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/sliderPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0.0"
                android:valueTo="1000.0"
                app:values="@array/initial_slider_values"
                app:thumbColor="@color/primary_pink"
                app:trackColorActive="@color/primary_pink"
                app:trackColorInactive="#E0E0E0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textMinPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₺0" />

                <TextView
                    android:id="@+id/textMaxPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺1000" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEE"
                android:layout_marginTop="12dp" />

            <!-- Discounted & Seller Rating -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchDiscounted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discounted Products"
                android:textColor="@color/text_dark"
                android:layout_marginTop="12dp"
                app:thumbTint="@color/primary_pink"
                app:trackTint="@color/primary_pink_light" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchTopSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 Star And Above Sellers"
                android:textColor="@color/text_dark"
                android:layout_marginTop="8dp"
                app:thumbTint="@color/primary_pink"
                app:trackTint="@color/primary_pink_light" />

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnApplyFilters"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="Apply Filters (3)"
        android:background="@drawable/bg_button_primary"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

