<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Üst bar / back + sahte arama alanı -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Geri butonu -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_24"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/primary_pink" />

        <!-- Search card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F8BBD0"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search_24"
                    android:contentDescription="Search"
                    app:tint="@color/primary_pink" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Search"
                    android:textColor="@color/primary_pink"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bildirim ikonu -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications_24"
            android:contentDescription="Notification"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/primary_pink" />
    </LinearLayout>

    <!-- ScrollView: ürün detayları -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ürün görseli -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:id="@+id/imageProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EEEEEE"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"
                    tools:ignore="ContentDescription" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Başlık + Fiyat -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Resim Çantası"
                android:textColor="@color/text_dark"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="₺250"
                android:textColor="@color/text_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Açıklama -->
            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="4dp"
                android:text="35x50 resim çantası. İhtiyaç fazlası olduğundan satmak istiyorum."
                android:textColor="@color/text_dark"
                android:textSize="14sp" />

            <!-- Detaylar bloğu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <!-- Satır 1: Category / Faculty -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textColor="@color/text_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stationery"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Faculty"
                            android:textColor="@color/text_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textFaculty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Art"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Satır 2: Condition / Department -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Condition"
                            android:textColor="@color/text_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textCondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Underused"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Department"
                            android:textColor="@color/text_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textDepartment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fine Arts"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Satır 3: Brand / Color -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Brand"
                            android:textColor="@color/text_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textBrand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Faber Castell"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Color"
                            android:textColor="@color/text_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Black"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Alt butonlar -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Satır 1: Cancel / Buy / ... -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/text_dark"
                android:backgroundTint="#F5F5F5" />

            <Button
                android:id="@+id/btnBuy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:text="Buy"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="#FF80AB" />

            <Button
                android:id="@+id/btnMessage"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:padding="0dp"
                android:text="..."
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="#FF80AB" />
        </LinearLayout>

        <!-- Satır 2: Fiyat teklifi / takas teklifi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMessageSeller"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#F8BBD0"
                android:text="Send a price offer"
                android:textAllCaps="false"
                android:textColor="@color/text_dark"
                android:textSize="12sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnExchangeOffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#F8BBD0"
                android:text="Send an exchange offer"
                android:textAllCaps="false"
                android:textColor="@color/text_dark"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Satır 3: Delete Product -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDeleteProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Product"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_pink"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


